{
  "manifest_version": 2,

  "name": "Typhon Bot",
  "description": "A bot to help with specific tasks in Typhon",
  "version": "0.8",

  "permissions": [
    "tabs",
    "downloads"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www2.typhongroup.net/*"],
      "js": ["typhon.js"]
    }
  ],

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  }
}
